  <div id="content">
    <%= @content %>
  </div>

  <hr>
  <div class="post-meta">
    <span title="post date" class="post-info"><%= if @mod_date == @post_date then @post_date else "Posted: " + @post_date end %></span>
    <span title="last modification date" class="post-info"><%= if @mod_date == @post_date then "" else "Updated: " + @mod_date end %></span>
    <span title="tags" class="post-info">
      <% unless @tags.nil? then for tag in @tags do %>
      <a href=<%= "/tag/" + tag + "/" %>> <%= tag %> </a>
      <% end end %>
    </span>
    <span title="author" class="post-info"><%= @author %></span>
  </div>

  <hr>
